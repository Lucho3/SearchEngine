<UserControl x:Class="SearchEngine.Views.UserControls.CustomDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchEngine.Views.UserControls"
             mc:Ignorable="d" 
            Width="400" Height="200">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Such item does not exist. Do you want to create it?"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Command="{Binding OkCommand}" Content="OK" Margin="10,0"/>
            <Button Command="{Binding CloseDialogCommand}" Content="Close" Margin="10,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>